<html>

<head>
    <title> TODO App</title>
    <link rel="stylesheet" type="text/css" href="/css/all_notes.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>

<body>
    <div class="app">
        <h1>TODO App</h1>
        <div class="form-control">
            <form action="/craete-note" method="POST" id="craete-note">
                <div class="container">
                    <div class="form-box a">
                        <label>Description</label><br>
                        <input type="text" name="description" placeholder="What do you need to do?" required>
                    </div>
                    <div class="form-box b">
                        <label>Category</label><br>
                        <select id="category" name="category" required>
                            <% for(let i of category_dropdown) { %>
                            <option value="<%= i%>"><%= i%></option>
                            <% } %>
                        </select>
                    </div>
                    <div class="form-box c">
                        <label>Due Date</label><br>
                        <input type="date" name="date" placeholder="Please enter number" required>
                    </div>
                </div>
            </form>
        </div>
        <div class="actions">
            <button class="button1" form="craete-note" type="submit"><i class="fa fa-plus"></i>ADD TASK</button>
            <button onclick="deleteAll()" class="button2" type="submit"><i class="fa fa-trash-o"></i>DELETE
                TASK</button>
            <!-- <button onclick="deleteAll()" class="button2" type="submit"><a href="/"><i
                class="fa fa-trash-o"></i>DELETE TASK</a></button> -->
        </div>
        <div class="display-list">
            <% for(let [idx,val] of todo_list.entries()) { %>
            <div class="all-lists">
                <input type="checkbox" class="checkbox" id="checkbox<%= idx %>" name="checkbox" value="<%= idx %>" />
                <div class="list">
                    <div class="sub-list">
                        <div class="description"><%= val.description%></div>
                        <div class="date"><i class="fa fa-calendar"></i><%= val.date%></div>
                    </div>
                </div>
                <div class="list">
                    <button class="category"><%= val.category%></button>
                </div>
            </div>
            <% } %>
        </div>
    </div>
    <script type="text/javascript" src="/js/all_notes.js"></script>
</body>

</html>